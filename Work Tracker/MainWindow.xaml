<Window x:Class="Work_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work_Tracker"
        mc:Ignorable="d"
		BorderThickness="0"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Menu x:Name="menu" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="900">
			<MenuItem Header="File">
				<MenuItem Header="Exit" HorizontalAlignment="Left" Width="140" Click="File_Exit_Click" />
			</MenuItem>
		</Menu>
		<Button x:Name="button" Grid.ColumnSpan="2" Content="Start" HorizontalAlignment="Left" Margin="60,245,0,0" VerticalAlignment="Top" Width="75" Click="start_button_Click"/>
		<Button x:Name="button_Copy" Grid.ColumnSpan="2" Content="Stop" HorizontalAlignment="Left" Margin="155,245,0,0" VerticalAlignment="Top" Width="75"/>
		<TextBlock x:Name="textBlock" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,25,0,0" TextWrapping="Wrap" Text="10:00" FontSize="120" VerticalAlignment="Top"/>

	</Grid>
</Window>
